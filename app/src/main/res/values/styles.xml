<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:textViewStyle">@style/TextViewAppTheme</item>
        <item name="android:buttonStyle">@style/ButtonAppTheme</item>
    </style>

    <style name="TextViewAppTheme" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/realm_black_lighter</item>
    </style>

    <style name="ButtonAppTheme" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
        <item name="android:textColor">@color/realm_white</item>
    </style>

</resources>
